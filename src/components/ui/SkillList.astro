---
import SkillListItem from "./SkillListItem.astro";

import type { Skill } from "@/types";

interface Props {
  name: string;
  list: Skill[];
}

const { name, list } = Astro.props;
---

<div class="break-inside-avoid space-y-6">
  <h3 class="text-2xl font-semibold uppercase">{name}</h3>

  <ul class="space-y-6">
    {list.map((skill) => <SkillListItem skill={skill} />)}
  </ul>
</div>
