---
interface Props {
  position: string;
  size: number;
  color: string;
  icon: string;
  title: string;
}

import Icon from "astro-iconify";

const { position, size, color, icon, title } = Astro.props;
---

<div
  class="lg:tooltip !absolute flex aspect-square -translate-x-2/4 -translate-y-2/4 items-center justify-center rounded-full p-6 shadow-lg transition-all hover:scale-110 hover:shadow-2xl"
  class:list={[position, `h-${size} w-${size}`, color]}
  data-tip={title}
>
  <div
    class="max-h-full max-w-full"
    class:list={[`h-${size - 8} w-${size - 8}`]}
  >
    <Icon name={icon} class="h-full w-full" />
  </div>
</div>
